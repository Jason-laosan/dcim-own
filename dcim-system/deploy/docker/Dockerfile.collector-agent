# 采集Agent Dockerfile
FROM golang:1.21-alpine AS builder

WORKDIR /build

# 复制go.mod和go.sum
COPY collector-agent/go.mod collector-agent/go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY collector-agent/ ./

# 编译
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o collector-agent ./cmd/main.go

# 最终镜像
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

# 从builder复制编译好的二进制文件
COPY --from=builder /build/collector-agent .

# 复制配置文件模板
COPY collector-agent/config.yaml.example ./config.yaml.example

# 创建数据目录
RUN mkdir -p /app/data/cache

EXPOSE 8080

CMD ["./collector-agent", "-config", "config.yaml"]
